{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "data": {
    "url": "https://raw.githubusercontent.com/johnstonw/johnstonw.github.io/main/owid-covid-data.csv",
    "format": {"type": "csv"}
  },
  "title": {"text": "COVID19 Cases/Deaths (2020-2022)", "fontSize": 25},
  "width": 600,
  "height": 500,
  "encoding": {
    "x": {
      "field": "date",
      "type": "temporal",
      "scale": {"domainMin": {"year": 2020}}
    }
  },
  "transform": [
    {
      "filter": {
        "and": [
          "datum.country == 'Africa'||datum.country=='Asia'||datum.country=='South America'||datum.country=='Europe'||datum.country=='Oceania'||datum.country=='North America'"
        ]
      }
    }
  ],
  "layer": [
    {
      "encoding": {
        "color": {
          "field": "country",
          "type": "nominal",
          "title": "Continent",
          "legend": {
            "orient": "none",
            "legendX": 30,
            "legendY": 30,
            "fillColor": "white",
            "strokeColor": "black",
            "padding": 10,
            "labelFontSize": 15,
            "titleFontSize": 17
          }
        },
        "y": {
          "field": "Covid Cases",
          "type": "quantitative",
          "scale": {"domainMin": 0}
        },
        "opacity": {
          "condition": {"selection": "continent_Selection", "value": 0.69},
          "value": 0.2
        }
      },
      "layer": [
        {
          "selection": {
            "continent_Selection": {
              "type": "multi",
              "fields": ["location"],
              "bind": "legend"
            }
          },
          "mark": {"type": "area", "clip": true}
        },
        {
          "transform": [{"filter": {"selection": "hover"}}],
          "mark": {
            "type": "area",
            "point": {"color": "black", "size": 100, "opacity": 1},
            "clip": true
          }
        }
      ]
    },
    {
      "transform": [{"pivot": "location", "value": "Covid Cases", "groupby": ["date"]}],
      "mark": {"type": "rule", "clip": true},
      "encoding": {
        "opacity": {
          "condition": {"value": 1, "selection": "hover"},
          "value": 0
        },
        "tooltip": [
          {
            "field": "date",
            "type": "temporal",
            "timeUnit": "date",
            "title": "Year"
          },
          {"field": "Africa", "type": "quantitative"},
          {"field": "Asia", "type": "quantitative"},
          {"field": "Europe", "type": "quantitative"},
          {"field": "North America", "type": "quantitative"},
          {"field": "Oceania", "type": "quantitative"},
          {"field": "South America", "type": "quantitative"}
        ]
      },
      "selection": {
        "hover": {
          "type": "single",
          "fields": ["date"],
          "nearest": true,
          "on": "mouseover",
          "empty": "none",
          "clear": "mouseout"
        }
      }
    }
  ],
  "config": {}
}
