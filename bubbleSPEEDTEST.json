{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 600,
  "height": 400,
  "title": {"text": "Internet Speeds (Mar 2022)", "fontSize": 25},
  "data": {
    "url": "https://raw.githubusercontent.com/johnstonw/johnstonw.github.io/main/fixed_year_2022_quarter_02.csv"
  },
  "params": [
    {
      "name": "Population_Above",
      "value": 0,
      "bind": {
        "input": "range",
        "min": 0,
        "max": 100000000,
        "step": 1000000,
        "name": "Minimum Population: "
      }
    },
    {
      "name": "Continent_selection",
      "bind": {
        "input": "select",
        "options": [null, "Americas", "Europe", "Africa", "Asia", "Oceania"],
        "labels": [
          "Show All",
          "Americas",
          "Europe",
          "Africa",
          "Asia",
          "Oceania"
        ],
        "name": "Continent Selection: "
      }
    }
  ],
  "transform": [
    {"filter": "datum.dSpeed > 0"},
    {"filter": "datum.uSpeed > 0"},
    {"filter": "datum.avgPop > Population_Above"},
    {
      "filter": "Continent_selection == null || datum.Continent == Continent_selection"
    }
  ],
  "encoding": {
    "x": {
      "field": "dSpeed",
      "type": "quantitative",
      "title": "Avg Download Speed (kB/s)",
      "axis": {"tickCount": 7},
      "scale": {"domain": [1, 230000]}
    },
    "y": {
      "field": "uSpeed",
      "type": "quantitative",
      "title": "Avg Upload Speed (kB/s)",
      "axis": {"tickCount": 6},
      "scale": {"domain": [1, 200000]}
    }
  },
  "layer": [
    {
      "mark": "circle",
      "encoding": {
        "size": {
          "field": "avgPop",
          "type": "quantitative",
          "title": "Population",
          "scale": {
            "type": "threshold",
            "domain": [10000, 1000000, 5000000, 10000000, 500000000],
            "range": [10, 50, 150, 200, 300, 400]
          },
          "legend": {"format": ".1s"}
        },
        "color": {
          "field": "Continent",
          "title": "Continent",
          "type": "nominal",
          "scale": {
            "domain": ["Americas", "Europe", "Africa", "Asia", "Oceania"],
            "range": ["#984ea3", "#ff7f00", "#a6cee3", "#377eb8", "#a65628"]
          }
        },
        "opacity": {"value": 0.6},
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {
            "field": "dSpeed",
            "type": "quantitative",
            "title": "Avg Download Speed (kB/s)",
            "format": ","
          },
          {
            "field": "uSpeed",
            "type": "quantitative",
            "title": "Avg Upload Speed (kB/s)",
            "format": ","
          },
          {
            "field": "avgPop",
            "type": "quantitative",
            "title": "Population",
            "format": ","
          },
          {
            "field": "Tests",
            "type": "quantitative",
            "title": "Number of Tests Taken",
            "format": ","
          }
        ]
      }
    },
    {
      "mark": {
        "type": "text",
        "align": "right",
        "baseline": "middle",
        "dx": -12,
        "fontSize": 11.5,
        "fontStyle": "italic"
      },
      "encoding": {
        "text": {"field": "Country", "type": "nominal"},
        "color": {"value": "black"},
        "opacity": {
          "condition": {
            "test": "datum['Country'] == 'China' || datum['Country'] == 'Singapore' || datum['Country'] == 'Australia' || datum['Country'] == 'New Zealand' || datum['Country'] == 'Italy' || datum['Country'] == 'France' ||  datum['Country'] == 'United States'",
            "value": 1
          },
          "value": 0
        },
        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {
            "field": "dSpeed",
            "type": "quantitative",
            "title": "Avg Download Speed (kB/s)",
            "format": ","
          },
          {
            "field": "uSpeed",
            "type": "quantitative",
            "title": "Avg Upload Speed (kB/s)",
            "format": ","
          },
          {
            "field": "avgPop",
            "type": "quantitative",
            "title": "Population",
            "format": ","
          },
          {
            "field": "Tests",
            "type": "quantitative",
            "title": "Number of Tests Taken",
            "format": ","
          }
        ]
      }
    }
  ]
}